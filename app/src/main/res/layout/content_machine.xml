<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.MachineActivity"
    tools:showIn="@layout/app_bar_machine">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/machineTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/machineGemalaA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gemala A" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/machineGemalaB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gemala B" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/machineGemalaC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gemala C" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/machineViewer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/machineTabLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.viewpager.widget.ViewPager>

</androidx.constraintlayout.widget.ConstraintLayout>